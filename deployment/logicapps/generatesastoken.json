{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "connections_azureblob": {
            "type": "string",
            "defaultValue": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Web/connections/azureblob')]"
        },
        "connection_commondataservice": {
            "type": "string",
            "defaultValue": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Web/connections/commondataservice')]"
        },
        "crmOrgName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "crmIdentifier": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        }
    },
    "functions": [
        {
            "namespace": "durin",
            "members": {
                "wrapInQuote": {
                    "parameters": [
                        {
                            "name": "text",
                            "type": "string"
                        }
                    ],
                    "output": {
                        "value": "[concat('''', parameters('text'),'''')]",
                        "type": "string"
                    }
                }
            }
        }
    ],
    "variables": {
        "org": "[durin.wrapInQuote(concat(parameters('crmOrgName'),'.',parameters('crmIdentifier')))]"
    },
    "resources": [
        {
            "name": "Logic-GenerateSASToken",
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "definition": {
                    "$schema": "https://schema.management.azure.com/schemas/2016-06-01/Microsoft.Logic.json",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        }
                    },
                    "triggers": {
                        "manual": {
                            "type": "Request",
                            "kind": "Http",
                            "inputs": {
                                "schema": {
                                    "properties": {
                                        "showId": {
                                            "type": "string"
                                        },
                                        "userId": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            },
                            "runtimeConfiguration": {
                                "secureData": {
                                    "properties": [
                                        "inputs",
                                        "outputs"
                                    ]
                                }
                            }
                        }
                    },
                    "actions": {
                        "Condition_-_Check_ShowId_and_UserId": {
                            "actions": {
                                "Condition_-_Check_for_ErrorMessage": {
                                    "actions": {
                                        "Create_error_log_record": {
                                            "inputs": {
                                                "body": {
                                                    "_media_assetcontainer_value": "@triggerBody()?['showId']",
                                                    "media_name": "@variables('ErrorMessage')"
                                                },
                                                "host": {
                                                    "connection": {
                                                        "name": "@parameters('$connections')['commondataservice']['connectionId']"
                                                    }
                                                },
                                                "method": "post",
                                                "path": "[concat('/v2/datasets/@{encodeURIComponent(encodeURIComponent(',variables('org'),'))}/tables/@{encodeURIComponent(encodeURIComponent(',durin.wrapInQuote('media_asseterrorlogs'),'))}/items')]"
                                            },
                                            "runAfter": {},
                                            "type": "ApiConnection",
                                            "runtimeConfiguration": {
                                                "secureData": {
                                                    "properties": [
                                                        "inputs",
                                                        "outputs"
                                                    ]
                                                }
                                            }
                                        },
                                        "Response_failure": {
                                            "inputs": {
                                                "body": "Failed to generate SAS Token",
                                                "statusCode": 500
                                            },
                                            "kind": "Http",
                                            "runAfter": {
                                                "Create_error_log_record": [
                                                    "Succeeded"
                                                ]
                                            },                                            
                                            "type": "Response",
                                            "runtimeConfiguration": {
                                                "secureData": {
                                                    "properties": [
                                                        "inputs"
                                                    ]
                                                }
                                            }
                                        }
                                    },
                                    "else": {
                                        "actions": {
                                            "Response_success": {
                                                "inputs": {
                                                    "body": "@outputs('Compose')",
                                                    "statusCode": 200
                                                },
                                                "kind": "Http",
                                                "runAfter": {},
                                                "type": "Response",
                                                "runtimeConfiguration": {
                                                    "secureData": {
                                                        "properties": [
                                                            "inputs"
                                                        ]
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    "expression": {
                                        "and": [
                                            {
                                                "greater": [
                                                    "@length(variables('ErrorMessage'))",
                                                    0
                                                ]
                                            }
                                        ]
                                    },
                                    "runAfter": {
                                        "Scope": [
                                            "Succeeded",
                                            "Failed"
                                        ]
                                    },
                                    "type": "If"
                                },
                                "Scope": {
                                    "actions": {
                                        "Fetch_user_show": {
                                            "inputs": {
                                                "host": {
                                                    "connection": {
                                                        "name": "@parameters('$connections')['commondataservice']['connectionId']"
                                                    }
                                                },
                                                "method": "get",
                                                "path": "[concat('/v2/datasets/@{encodeURIComponent(encodeURIComponent(',variables('org'),'))}/tables/@{encodeURIComponent(encodeURIComponent(',durin.wrapInQuote('media_assetcontainers'),'))}/items')]",
                                                "queries": {
                                                    "$filter": "media_AssetContainer_media_MacUser_media_/any(o:o/_media_user_value eq @{body('Logic-ValidateToken')}) and media_assetcontainerid eq '@{triggerBody()?['showId']}'"
                                                }
                                            },
                                            "runAfter": {},
                                            "type": "ApiConnection",
                                            "runtimeConfiguration": {
                                                "secureData": {
                                                    "properties": [
                                                        "inputs",
                                                        "outputs"
                                                    ]
                                                }
                                            }
                                        },
                                        "If_Record_greater_than_0": {
                                            "actions": {
                                                "Compose": {
                                                    "inputs": {
                                                        "sas": "@{body('Create_SAS_URI')}",
                                                        "weburi": "@{body('Create_SAS_URI')?['WebUrl']}"
                                                    },
                                                    "runAfter": {
                                                        "Create_SAS_URI": [
                                                            "Succeeded"
                                                        ]
                                                    },
                                                    "type": "Compose",                                                 
                                                    "runtimeConfiguration": {
                                                        "secureData": {
                                                            "properties": [
                                                                "inputs"
                                                            ]
                                                        }
                                                    }
                                                },
                                                "Create_SAS_URI": {
                                                    "inputs": {
                                                        "body": {
                                                            "ExpiryTime": "@{addHours(utcNow(),6)}",
                                                            "Permissions": "Read,Write,List,Delete"
                                                        },
                                                        "host": {
                                                            "connection": {
                                                                "name": "@parameters('$connections')['azureblob']['connectionId']"
                                                            }
                                                        },
                                                        "method": "post",
                                                        "path": "/datasets/default/CreateSharedLinkByPath",
                                                        "queries": {
                                                            "path": "@{body('Fetch_user_show')?['value']?[0]?['media_containerpath']}"
                                                        }
                                                    },
                                                    "runAfter": {},
                                                    "type": "ApiConnection",
                                                    "runtimeConfiguration": {
                                                        "secureData": {
                                                            "properties": [
                                                                "inputs",
                                                                "outputs"
                                                            ]
                                                        }
                                                    }
                                                }
                                            },
                                            "else": {
                                                "actions": {
                                                    "Not_Found_Response": {
                                                        "inputs": {
                                                            "statusCode": 404
                                                        },
                                                        "kind": "Http",
                                                        "runAfter": {},
                                                        "type": "Response",
                                                        "runtimeConfiguration": {
                                                            "secureData": {
                                                                "properties": [
                                                                    "inputs"
                                                                ]
                                                            }
                                                        }
                                                    }
                                                }
                                            },
                                            "expression": {
                                                "and": [
                                                    {
                                                        "greater": [
                                                            "@length(body('Fetch_user_show')?['value'])",
                                                            0
                                                        ]
                                                    }
                                                ]
                                            },
                                            "runAfter": {
                                                "Fetch_user_show": [
                                                    "Succeeded"
                                                ]
                                            },
                                            "type": "If"
                                        },
                                        "Set_variable_-_Get_User_Assosciated_Show_-_ErrorMessage": {
                                            "inputs": {
                                                "name": "ErrorMessage",
                                                "value": "Failed to fetch associated user for showId: @{triggerBody()?['showId']}"
                                            },
                                            "runAfter": {
                                                "Fetch_user_show": [
                                                    "Failed",
                                                    "TimedOut"
                                                ]
                                            },
                                            "type": "SetVariable"
                                        }
                                    },
                                    "runAfter": {},
                                    "type": "Scope"
                                }
                            },
                            "else": {
                                "actions": {
                                    "Response": {
                                        "inputs": {
                                            "body": {
                                                "message": "ShowId and UserId Required"
                                            },
                                            "headers": {
                                                "Content-Type": "application/json; charset=utf-8"
                                            },
                                            "statusCode": 400
                                        },
                                        "kind": "Http",
                                        "runAfter": {},
                                        "type": "Response",
                                        "runtimeConfiguration": {
                                            "secureData": {
                                                "properties": [
                                                    "inputs"
                                                ]
                                            }
                                        }
                                    }
                                }
                            },
                            "expression": {
                                "and": [
                                    {
                                        "greater": [
                                            "@length(triggerBody()?['showId'])",
                                            0
                                        ]
                                    },
                                    {
                                        "greater": [
                                            "@length(triggerBody()?['userId'])",
                                            0
                                        ]
                                    }
                                ]
                            },
                            "runAfter": {
                                "Initialize_variable_-_ErrorMessage": [
                                    "Succeeded"
                                ]
                            },
                            "type": "If"
                        },
                        "Initialize_variable_-_ErrorMessage": {
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "ErrorMessage",
                                        "type": "string"
                                    }
                                ]
                            },
                            "runAfter": {
                                "Logic-ValidateToken": [
                                    "Succeeded"
                                ]
                            },
                            "type": "InitializeVariable"
                        },
                        "Logic-ValidateToken": {
                            "inputs": {
                                "body": {
                                    "token": "@{triggerOutputs()['headers']['x-auth-token']}",
                                    "userId": "@triggerBody()?['userId']"
                                },
                                "host": {
                                    "triggerName": "manual",
                                    "workflow": {
                                        "id": "[concat(subscription().id,'/resourceGroups/',resourceGroup().name,'/providers/Microsoft.Logic/workflows/Logic-ValidateToken')]"
                                    }
                                }
                            },
                            "runAfter": {},
                            "type": "Workflow"
                        },
                        "unathorized_response": {
                            "inputs": {
                                "body": "@body('Logic-ValidateToken')",
                                "statusCode": 401
                            },
                            "kind": "Http",
                            "runAfter": {
                                "Logic-ValidateToken": [
                                    "Failed"
                                ]
                            },
                            "type": "Response"
                        }
                    },
                    "outputs": {
                    }
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "azureblob": {
                                "connectionId": "[parameters('connections_azureblob')]",
                                "connectionName": "azureblob",
                                "id": "[concat(subscription().id, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azureblob')]"
                            },
                            "commondataservice": {
                                "connectionId": "[parameters('connection_commondataservice')]",
                                "connectionName": "commondataservice",
                                "id": "[concat(subscription().id, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/commondataservice')]"
                            }
                        }
                    }
                }
            }
        }
    ],
    "outputs": {
    }
}