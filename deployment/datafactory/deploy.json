{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"dataFactoryName": {
			"type": "string",
			"metadata": {
				"description": "Data Factory Name"
			}
		},
		"blobStorageAccount": {
			"type": "string",
			"metadata": {
				"description": "Name of the Azure storage account."
			}
		},
		"vendorblobStorageAccount": {
			"type": "string",
			"metadata": {
				"description": "Name of the Vendor Azure storage account."
			}
		}
	},
	"variables": {
		"storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('blobStorageAccount'))]",
		"vendorstorageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('vendorblobStorageAccount'))]"
	},
	"resources": [
		{
			"type": "Microsoft.DataFactory/factories",
			"apiVersion": "2018-06-01",
			"name": "[parameters('dataFactoryName')]",
			"location": "[resourceGroup().location]",
			"properties": {},
			"identity": {
				"type": "SystemAssigned"
			},
			"resources": [
				{
					"type": "Microsoft.DataFactory/factories/linkedServices",
					"apiVersion": "2018-06-01",
					"name": "SourceBlobStorageLS",
					"location": "[resourceGroup().location]",
					"dependsOn": [
						"[parameters('dataFactoryName')]",
						"[parameters('blobStorageAccount')]"
					],
					"properties": {
						"type": "AzureBlobStorage",
						"typeProperties": {
							"connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('blobStorageAccount'),';AccountKey=',listKeys(variables('storageAccountId'), '2019-06-01').keys[0].value)]"
						}
					}
				},
				{
					"type": "Microsoft.DataFactory/factories/linkedServices",
					"apiVersion": "2018-06-01",
					"name": "VendorBlobStorageLS",
					"location": "[resourceGroup().location]",
					"dependsOn": [
						"[parameters('dataFactoryName')]",
						"[parameters('vendorblobstorageAccount')]"
					],
					"properties": {
						"type": "AzureBlobStorage",
						"typeProperties": {
							"connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('vendorblobstorageAccount'),';AccountKey=',listKeys(variables('vendorstorageAccountId'), '2019-06-01').keys[0].value)]"
						}
					}
				}
			]
		}
	]
}